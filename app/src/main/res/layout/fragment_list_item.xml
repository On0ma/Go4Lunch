<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nom du restaurant"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_list_item_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Type - Adresse"
        app:layout_constraintTop_toBottomOf="@+id/fragment_list_item_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_list_item_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Heures d'ouverture"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/fragment_list_item_adress"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_list_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="200m"/>

    <TextView
        android:id="@+id/fragment_list_workers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_list_distance"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2 personnes"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/fragment_list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_list_workers"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Note" />

</androidx.constraintlayout.widget.ConstraintLayout>